# Application
NODE_ENV=production
PORT=8080

# MongoDB Configuration
MONGODB_URI=mongodb://your-mongodb-uri/halogen
MONGODB_AUTH_SOURCE=admin

# Session & Security
SESSION_SECRET=your-secret-key-at-least-32-chars-long
CORS_ORIGIN=https://halogen-frontend.fly.dev,https://halogen-www.fly.dev
COOKIE_SECURE=true
COOKIE_DOMAIN=.fly.dev
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Email Configuration (for password reset)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASS=your-email-password
EMAIL_FROM=no-reply@halogen.com

# JWT (optional for token-based auth)
JWT_SECRET=your-jwt-secret-key-at-least-32-chars
JWT_EXPIRES_IN=1d